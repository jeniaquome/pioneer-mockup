# Copy this file to .env in the same directory as compose.yml
# Google Gemini API Configuration for LLM Recommendations and Personalized Descriptions
# Replace with your actual Google API key
GOOGLE_API_KEY=your-google-api-key-here

# Optional: Customize the LLM model (default: gemini-2.5-flash-preview-09-2025)
# RECOMMENDER_MODEL=gemini-2.5-flash-preview-09-2025
# Other options: gemini-2.0-flash-lite, gemini-2.0-flash, gemini-2.0-pro
# For latest preview: gemini-2.5-flash-lite-preview-09-2025

# Optional: Max candidates to send to LLM (default: 60)
# RECOMMENDER_MAX_CANDIDATES=100

# Optional: Enable AI-generated personalized descriptions (default: true)
# AI_DESCRIPTION_ENABLED=true

# Optional: Use rule-based fallback if AI description fails (default: true)
# AI_DESCRIPTION_FALLBACK=true

# Rate Limiting Configuration
# Enable/disable rate limiting (default: true)
RATE_LIMIT_ENABLED=true

# Global rate limit in requests per minute (default: 200)
RATE_LIMIT_PER_MINUTE=200

# AI endpoint rate limit in requests per minute (default: 30)
RATE_LIMIT_AI_PER_MINUTE=30

